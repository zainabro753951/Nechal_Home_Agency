<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Nechal Home Agency - Sign Up for Access</title>
  <meta name="description" content="Join Nechal Home Agency today! Create your account to gain access to exclusive listings, manage your properties, and connect with potential buyers or renters. Sign up now!">
  <%- include("../common/config.ejs") %>
</head>

<body>
  <div class=" mx-auto min-h-screen relative grid xs:grid-cols-1 lg:grid-cols-2 text-black bg-white  rounded-lg max-w-[1300px]">
    <div class="relative w-full lg:h-full xs:h-[40vh]">
      <img class="w-full absolute object-cover h-full" src="/imgs/login/login-img.png" alt="">
      <img class="absolute left-10 top-10" src="/imgs/home2-logo.svg" alt="">
    </div>
    <div class="flex items-center py-7 justify-center w-full h-full px-3">
      <div>
        <div class="text-center">
          <h2 class="text-3xl mb-3 font-semibold">Sign Up</h2>
          <p class="text-gray-500">Don't Have an account <a href="/" id="login" class="text-black cursor-pointer font-semibold transition-all duration-500 hover:text-dgolden">Login</a>
          </p>
        </div>
        <form class="flex flex-col gap-3 py-7" action="/signup" method="post" enctype="multipart/form-data">
          <div class="flex flex-wrap w-full gap-3 items-center">
            <div class="flex flex-col w-full gap-1">
              <label for="">First Name</label>
              <input id="name" class="py-3 px-5 bg-gray-100 outline-none w-full rounded-md transition-all duration-500 focus:border-dgolden border-2 border-transparent" type=" text" name="Fname" required placeholder="First Name">
            </div>
            <div class="flex flex-col w-full gap-1">
              <label for="">Last Name</label>
              <input id="name" class="py-3 px-5 bg-gray-100 outline-none w-full rounded-md transition-all duration-500 focus:border-dgolden border-2 border-transparent" type="text" name="Lname" required placeholder="Last Name">
            </div>
          </div>
          <div class="flex flex-wrap w-full items-center gap-3">
            <div class="flex flex-col w-full gap-1">
              <label for="">Enter your email address*</label>
              <input class=" py-3 px-5 bg-gray-100 outline-none w-full rounded-md transition-all duration-500 focus:border-dgolden border-2 border-transparent" type="email" name="email" required placeholder="Type email">
            </div>
            <div class="flex flex-col w-full gap-1">
              <label for="">Phone with country code*</label>
              <input class=" py-3 px-5 bg-gray-100 outline-none w-full rounded-md transition-all duration-500 focus:border-dgolden border-2 border-transparent" type="tel" name="phoneNum" required placeholder="Enter your Phone">
            </div>
          </div>
          <div class="grid md:grid-cols-2 w-full items-center gap-3">
            <div class="flex gap-1 items-center w-full">
              <input type="file" id="fileInput" class="hidden" name="profileImage" accept="image/*" required>
              <label for="fileInput" class="flex items-center justify-center w-[65px] h-[65px] border-dashed border border-dgolden text-white rounded-lg cursor-pointer shadow-lg">
                <i class='bx bx-plus text-black text-2xl'></i>
              </label>
              <label for="">Upload profile picture</label>
            </div>
            <div class="w-[150px] h-[150px] border border-dashed rounded-md p-3 border-dgolden flex ">
              <span id="protext" class="text-gray-400 m-auto">Profile picture</span>
              <img id="imagePreview" class="w-full h-full object-top object-cover rounded-md hidden" alt="Image Preview">
            </div>
          </div>
          <div class="flex flex-wrap w-full gap-3 items-center">
            <div class="flex flex-col w-full gap-1">
              <label for="">Password</label>
              <div class="px-2 bg-gray-100 py-3 outline-none rounded-md transition-all duration-500 focus:border-dgolden border-2 border-transparent cursor-pointer flex justify-between items-center gap-1">
                <input id="password" class=" w-[100%] outline-none bg-transparent" type="password" name="password" placeholder="*** ***" required>
                <span id="togglePassword" class="icon"><i class="fa-regular fa-eye-slash"></i></span>
              </div>
            </div>
            <div class="flex flex-col w-full gap-1">
              <label for="">Confirm Password</label>
              <div class=" px-2 bg-gray-100 py-3 outline-none rounded-md transition-all duration-500 focus:border-dgolden border-2 border-transparent cursor-pointer flex justify-between items-center gap-1">
                <input id="password2" class=" w-[100%] outline-none bg-transparent" type="password" name="confirmPass" placeholder="*** ***" required>
                <span id="togglePassword2" class="icon"><i class="fa-regular fa-eye-slash"></i></span>
              </div>
            </div>
          </div>
          <input class="py-3 px-5 outline-none w-full rounded-md transition-all duration-500 bg-black text-white text-xl hover:bg-dgolden mt-2" type="submit" id="submit" value="Sign up">
        </form>
        <% if (message) { %>
        <script>
          Toastify({
            text: "<%= message %>",
            duration: 3000,
            gravity: "top",
            position: 'right',
            backgroundColor: "red",
          }).showToast();
        </script>
        <% } %>
        <% if (password) { %>
        <script>
          Toastify({
            text: "<%= password %>",
            duration: 3000,
            gravity: "top",
            position: 'right',
            backgroundColor: "red",
          }).showToast();
        </script>
        <% } %>
      </div>
    </div>
  </div>
  <script src="/js/forum.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
</body>

</html>
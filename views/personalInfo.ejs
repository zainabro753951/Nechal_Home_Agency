<div class="bg-[#FAF8FB] md:p-10 xs:text-sm md:text-lg flex flex-col xs:items-center md:items-start">
  <h1 class="text-xl font-semibold ">Your Details</h1>
  <div class="w-[120px] h-[120px] p-2 rounded-full">
    <img class="w-full h-full rounded-full object-cover" src="<%= filepath %>" alt="">
  </div>
  <div class="py-10 grid md:grid-cols-2 xs:gap-2 md:gap-0">
    <div class="flex flex-col gap-3">
      <div class="flex items-center gap-2">
        <label class="font-semibold" for="">First Name:</label>
        <h1 class="text-sm"><%= Fname %></h1>
      </div>
      <div class="flex items-center gap-2">
        <label class="font-semibold" for="">Last Name:</label>
        <h1 class="text-sm"><%= Lname %></h1>
      </div>
    </div>
    <div class="flex flex-col gap-3">
      <div class="flex items-center gap-2">
        <label class="font-semibold" for="">Email:</label>
        <h1 class="text-sm"><%= email %></h1>
      </div>
      <div class="flex items-center gap-2">
        <label class="font-semibold" for="">Phone:</label>
        <h1 class="text-sm"><%= phoneNum %></h1>
      </div>
    </div>
  </div>
</div>